{{#if empty}}
<p>No courses found</p>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">add</button>
{{else}}

<div class="course-table" style="margin: 20px;">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Upload Date</th>
        <th scope="col">Last update Date</th>
        <th scope="col">View</th>
        <th scope="col">Number lessons</th>
        <th scope="col">Quantity purchased</th>
        <th scope="col">Number of reviews</th>
        <th scope="col">Rating</th>
        <th scope="col">Statuscode</th>
        <th scope="col">Price</th>
        <th scope="col">Aprroved</th>
        <th scope="col">Action</th>
      </tr>
    </thead>

    <tbody>
      {{#each courses as |course|}}
      <tr>
        <td>{{course.name}}</td>
        <td>{{course.uploaddate}}</td>
        <td>{{course.lastupdatedat}}</td>
        <td>{{course.viewscount}}</td>
        <td>{{course.lessonscount}}</td>
        <td>{{course.getscount}}</td>
        <td>{{course.ratingscount}}</td>
        <td>{{course.rating}}</td>
        <td>{{course.statuscode}}</td>
        <td>{{course.price}}</td>

        <td>
          {{#if course.approvedby}}
          <a href="#">
            <image src="/assets/client/images/icon/approve.png" style="width: 30px; margin-left: 15px;">
          </a>
          {{/if}}
        </td>

        <td>
          <a class="edit" href="#editModal" data-toggle="modal" datd-id="{{course.id}}" data-name="{{course.name}}"
            data-number="{{course.lessonscount}}" data-price={{course.price}} data-des="{{course.description}}">
            <image src="/assets/client/images/icon/edit.png" style="width: 30px;">
          </a>

          <a class="delete-course" href="#delModal" data-toggle="modal" data-id="{{course.id}}">
            <image src="/assets/client/images/icon/del.png" style="width: 30px;">
          </a>

          <a href="/courses/{{course.id}}">
            <image src="/assets/client/images/icon/open.png" style="width: 30px;">
          </a>

          <a class="add-image" href="#imageModal" data-toggle="modal" data-id="{{course.id}}" role="button">
            <image src="/assets/client/images/icon/image.png" style="width: 30px;">
          </a>
        </td>
      </tr>
      <!-- Modal of edit Course-->
      <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editModalLabel">Edit</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="/teacher/courses/{{course.id}}/edit" method="POST" id="edit-form">
                <div class="editor" style=" width: 100%; display: flex; justify-content: center; padding: 10px;">
                  <div class="form-group">
                    <label for="name">Name</label>
                    <input type="input" name="name" id="name" placeholder="ex: Python online..." style="width: 100%;">
                    <br><br>

                    <label for="edit-choice">Field</label>
                    <div class="select" style="z-index: 1000;">
                      <select name="selection" id="edit-choice" placeholder="Choise Field" multiple>
                        {{#each fields as |field|}}
                        <option value="{{field.id}}">{{field.name}}</option>
                        {{/each}}
                      </select>
                    </div>

                    <div>
                      <div style="display: inline-block; margin-right: 10px">
                        <label for="name">Number lessons</label>
                        <input type="input" name="number" id="number" placeholder="ex: 40" style="width: 100%;"
                          value=""><br><br>
                      </div>

                      <div style="float: right;">
                        <label for="name">Price</label>
                        <input type="input" name="price" id="price" placeholder="ex: 20" style="width: 100%; "
                          value=""><br><br>
                      </div>
                    </div>

                    <label for="txtDes">Description</label>
                    <textarea class="txtDes" name="Des" id="des" cols="30" rows="10" value=""></textarea>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
              </form>
            </div>

          </div>
        </div>
      </div>
      {{/each}}
    </tbody>
  </table>

  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Add</button>

  <!-- Modal of addCourse-->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Input Course</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="" method="POST">
            <div class="editor" style=" width: 100%; display: flex; justify-content: center; padding: 10px;">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="input" name="name" placeholder="ex: Python online..." style="width: 100%;" value="">
                <br><br>

                <label for="choices-multiple-remove-button">Field</label>
                <div class="select" style="z-index: 1000;">
                  <select name="selection" id="choices-multiple-remove-button" placeholder="Choise Field" multiple>
                    {{#each fields as |field|}}
                    <option value="{{field.id}}">{{field.name}}</option>
                    {{/each}}
                  </select>
                </div>


                <div>
                  <div style="display: inline-block; margin-right: 10px">
                    <label for="name">Number lessons</label>
                    <input type="input" name="number" placeholder="ex: 40" style="width: 100%;" value="0"><br><br>
                  </div>

                  <div style="float: right;">
                    <label for="name">Price</label>
                    <input type="input" name="price" placeholder="ex: 20" style="width: 100%; " value="0"><br><br>
                  </div>
                </div>
                <div>
                  <label for="txtDes">Description</label>
                  <textarea class="txtDes" name="Des" cols="30" rows="10" value=""></textarea>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal of add image-->
  <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="imageModalLabel">Edit</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="" method="POST" enctype="multipart/form-data" id="addImage-form">
            <div class="image" style=" width: 100%; display: flex; justify-content: center; padding: 10px;">
              <div class="form-group">
                <input id="fuMain" name="fuMain" class="file" type="file" multiple>
              </div>
            </div>
            <div class="editor-footer"
              style="display: inline-block; display: flex; justify-content: center; padding: 10px;">
              <button type='submit' class="btn btn-primary" style="margin-right: 5px;">
                <i class="fa fa-check " aria-hidden="true"></i>
                Upload
              </button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal of delete-->
<div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-labelledby="delModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delModalLabel">Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="" method="POST" id="delete-form">
          <h3>Are you sure about delete ?</h3>
          <button id="btnDelete" type='submit' class="btn btn-primary" style="margin-right: 5px;">
            <i class="fa fa-check " aria-hidden="true"></i>
            Delete
          </button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
      </form>
    </div>
  </div>
</div>
</div>
</div>
{{/if}}