{{#section 'js'}}
<script src="https://res.cloudinary.com/dxfq3iotg/raw/upload/v1569006273/BBBootstrap/choices.min.js?version=7.0.0"></script>

<script src="https://cdn.tiny.cloud/1/o4dikek5c6dsuwbmp60ubupm9bbaqq6vdgyl6kpm4qhvd5iy/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src= "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
<script>
    tinymce.init({
        selector: '#txtDes',
        height: 600,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
        ],
    });
</script>
<script>
  $('#fuMain').fileinput({
    theme: 'fa',
    dropZoneEnabled: false,
    allowedFileExtensions: ['png', 'jpg', 'gif'],
  });
</script>

<script>
  $('a.add-image').on('click',function(){
    let id = $(this).attr('data-id');
    console.log(id);
    $('#addImage-form').attr('action', `/teacher/courses/${id}`);
    $('#delete-form').attr('action', `/teacher/courses/${id}`);
  });
</script>

<script>
   $(document).ready(function(){

    var multipleCancelButton = new Choices('#choices-multiple-remove-button', {
    removeItemButton: true,
    maxItemCount:10,
    searchResultLimit: 10,
    renderChoiceLimit:10,
    });


 });
</script>

{{/section}}
{{#if empty}}
<p>No courses found</p>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">add</button>
{{else}}

<div class="course-table" style="margin: 20px;">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Upload Date</th>
        <th scope="col">Last update Date</th>
        <th scope="col">View</th>
        <th scope="col">Number lessons</th>
        <th scope="col">Quantity purchased</th>
        <th scope="col">Number of reviews</th>
        <th scope="col">Rating</th>
        <th scope="col">Statuscode</th>
        <th scope="col">Price</th>
        <th scope="col">Aprroved</th>
        <th scope="col">Action</th>
      </tr>
    </thead>

    <tbody>
      {{#each courses}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.uploaddate}}</td>
        <td>{{this.lastupdatedat}}</td>
        <td>{{this.viewscount}}</td>
        <td>{{this.lessonscount}}</td>
        <td>{{this.getscount}}</td>
        <td>{{this.ratingscount}}</td>
        <td>{{this.rating}}</td>
        <td>{{this.statuscode}}</td>
        <td>{{this.price}}</td>

        <td>
          {{#if this.approvedby}}
          <a href="#">
            <image src="/assets/client/images/icon/approve.png" style="width: 30px; margin-left: 15px;">
          </a>
          {{/if}}
        </td>

        <td>
          

          <a class = "delete-course" href="#delModal" data-toggle="modal" data-id="{{this.id}}" role="button">
            <image src="/assets/client/images/icon/del.png" style="width: 30px;">
          </a>

          <a href="/courses/{{this.id}}">
            <image src="/assets/client/images/icon/open.png" style="width: 30px;">
          </a>

          <a class ="add-image" href="#imageModal" data-toggle="modal" data-id="{{this.id}}" role="button">
            <image src="/assets/client/images/icon/image.png" style="width: 30px;">
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Add</button>

  <!-- Modal of edit-->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Input Course</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="" method="POST">
            <div class="editor" style=" width: 100%; display: flex; justify-content: center; padding: 10px;">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="input" name="name" id="name" placeholder="ex: Python online..." style="width: 100%;">
                <br><br>
                

                <label for="choices-multiple-remove-button">Field</label>
                <div class="select" style="z-index: 1000;"> 
                  <select name = "selection" id="choices-multiple-remove-button" placeholder="Choise Field" multiple>
                    {{#each fields}}
                      <option value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                  </select> 
                </div>


                <div>
                  <div style="display: inline-block; margin-right: 10px">
                    <label for="name">Number lessons</label>
                    <input type="input" name="number" id="number" placeholder="ex: 40" style="width: 100%;"
                      value="0"><br><br>
                  </div>

                  <div style="float: right;">
                    <label for="name">Price</label>
                    <input type="input" name="price" id="price" placeholder="ex: 20" style="width: 100%; "
                      value="0"><br><br>
                  </div>
                </div>
                <div>
                    <label for="txtDes">Description</label>
                    <textarea class="form-control" name="Des" id="txtDes" cols="30" rows="10" value=""></textarea>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal of add-->
  <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="imageModalLabel">Edit</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="" method="POST" enctype="multipart/form-data" id ="addImage-form">
            <div class="image" style=" width: 100%; display: flex; justify-content: center; padding: 10px;">
              <div class="form-group">
                <input id="fuMain" name="fuMain" class="file" type="file" multiple>
              </div>
            </div>
            <div class="editor-footer"
              style="display: inline-block; display: flex; justify-content: center; padding: 10px;">
              <button type='submit' class="btn btn-primary" style="margin-right: 5px;">
                <i class="fa fa-check " aria-hidden="true"></i>
                Upload
              </button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal of add-->
  <div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-labelledby="delModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="delModalLabel">Delete</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="" method="POST" id = "delete-form">
            <h3>Are you sure about delete ?</h3>
              <button type='submit' class="btn btn-primary" style="margin-right: 5px;">
                <i class="fa fa-check " aria-hidden="true"></i>
                Delete
              </button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}