        $('#edit-lesson #title-edit').attr('value', `${title}`);
        $('form#edit-lesson').attr('action', `/courses/${courseId}/lessons/${id}?_method=PUT`);
        tinymce.get('des-edit').setContent(des);
    });
</script>
