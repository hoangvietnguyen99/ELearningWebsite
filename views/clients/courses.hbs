{{#section 'css'}}
{{/section}}

<section class="bg-lighter">
    <div class="container pb-60">
        <div class="section-title mb-10">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="mt-0 text-uppercase font-28 line-bottom line-height-1">Our <span
                            class="text-theme-color-2 font-weight-400">COURSES</span><span
                            class="text-theme-color-2 font-weight-400"> {{title}}</span></h2>
                </div>
            </div>
        </div>
        <div class="section-content">
            <div class="row">
                <div class="col-md-12">
                    {{#each courses}}
                        <div class="card" style="width: 20%; min-height: 100px; padding: 2% 0 2% 0; margin: 0 2% 0 2%;">
                            <img src="/assets/client/images/courses/1.png" class="card-img-top" alt="courses image">
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <div>
                                    <i class="fa fa-star" style="font-size: 30px">10</i>
                                    <i class="fa fa-download" aria-hidden="true" style="font-size: 30px">10</i>
                                    <i class="fa fa-comment" aria-hidden="true" style="font-size: 30px">20</i>
                                </div>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
