{{#if data.thisCourse}}
    <section class="course_details_area section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 course_details_left">
                    <div class="main_image">
                        <img class="img-fluid" src="/assets/client/images/courses/{{data.thisCourse.id}}.png"
