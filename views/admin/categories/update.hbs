<div class="page-title-box">
  <div class="row align-items-center">
    <div class="col-sm-6">
      <h2 class="page-title">{{{title}}}</h2>
      <ol class="breadcrumb">
        <li class="breadcrumb-item active">Welcome to Dashboard</li>
      </ol>
    </div>
  </div>
</div>
<!-- start table -->
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <form method="POST">
          <div class="form-group">
            <label for="inputName">Id</label>
            <input type="text" value="{{{category.id}}}" class="form-control" name="id" readonly>
          </div>
          <div class="form-group">
            <label for="inputName">Name</label>
            <input type="text" value="{{{category.name}}}" class="form-control" name="name" placeholder="Enter name">
          </div>
          <button type="button" class="btn btn-success" aria-label="Left Align"
            onclick="window.location.href='/admin/category'">
            <span class="glyphicon glyphicon-align-left" aria-hidden="true">Back to List</span>
          </button>
          {{#if canDelete}}
            <button type="submit" class="btn btn btn-danger" formaction="/admin/category/delete">
              <i class="fa fa-trash" aria-hidden="true"> Delete </i>
            </button>
          {{else}}
            <button disabled type="submit" class="btn btn btn-danger" formaction="/admin/category/delete">
              <i class="fa fa-trash" aria-hidden="true"> Delete </i>
            </button>
          {{/if}}
          <button type="submit" class="btn btn-primary" formaction="/admin/category/update">
            Update
          </button>
        </form>
      </div>
    </div>
  </div>
</div>