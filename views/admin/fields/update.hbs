<form style="margin-top: 100px;" method="POST">
  <div class="form-group">
    <label for="inputName">Id</label>
    <input type="text" value="{{{field.id}}}" class="form-control" name="id" readonly>
  </div>
  <div class="form-group">
    <label for="inputName">Name</label>
    <input type="text" value="{{{field.name}}}" class="form-control" name="name" placeholder="Enter name">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Category</label>
    <select class="form-control" id="exampleFormControlSelect1" name="categoryid">
      <option value="{{{field.categoryid}}}" selected>{{{field.categoryname}}}</option>
      {{#each categories}}
      <option value="{{{id}}}">{{{name}}}</option>
      {{/each}}
    </select>
  </div>
  <button type="button" class="btn btn-success" aria-label="Left Align"
    onclick="window.location.href='/admin/field'">
    <span class="glyphicon glyphicon-align-left" aria-hidden="true">Back to List</span>
  </button>
  <button type="submit" class="btn btn btn-danger" formaction="/admin/field/delete">
    <i class="fa fa-trash" aria-hidden="true"> Delete </i>
  </button>
  <button type="submit" class="btn btn-primary" formaction="/admin/field/update">
    Update
  </button>
</form>