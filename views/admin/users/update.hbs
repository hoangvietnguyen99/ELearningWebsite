<div class="page-title-box">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <h2 class="page-title">{{{title}}}</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Welcome to Dashboard</li>
            </ol>
        </div>
    </div>
</div>
<!-- start table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="POST">
                    <div class="form-group">
                        <label for="inputName">Id</label>
                        <input type="text" value="{{{user.id}}}" class="form-control" name="id" readonly>
                    </div>
                    <div class="form-group">
                        <label for="inputName">Name</label>
                        <input type="text" value="{{{user.fullname}}}" class="form-control" name="fullname"
                            placeholder="Enter name">
                    </div>

                    <div class="row">
                        <div class="col-6 form-group">
                            <label for="inputName">Gender</label>
                            <input type="text" value="{{{user.gender}}}" class="form-control" name="gender">
                        </div>
                        <div class="col-6 form-group">
                            <label for="inputName">Phone</label>
                            <input type="text" value="{{{user.phone}}}" class="form-control" name="phone">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputName">Address</label>
                        <input type="text" value="{{{user.address}}}" class="form-control" name="address">
                    </div>

                    <div class="row">
                        <div class="col-6 form-group">
                            <label for="inputName">Role</label>
                            <select name="role">
                                <option value="TEACHER" selected>TEACHER</option>
                                <option value="STUDENT">STUDENT</option>
                                <option value="ADMIN">ADMIN</option>
                            </select>
                        </div>

                        <div class="col-6 form-group">
                            <label for="inputName">Status</label>
                            <select name="status">
                                <option value="AVAILABLE" selected>AVAILABLE</option>
                                <option value="UNAVAILABLE">UNAVAILABLE</option>
                            </select>
                        </div>
                    </div>

                    <button type="button" class="btn btn-success" aria-label="Left Align"
                        onclick="window.location.href='/admin/user'">
                        <span class="glyphicon glyphicon-align-left" aria-hidden="true">Back to List</span>
                    </button>
                    <button type="submit" class="btn btn btn-danger" formaction="/admin/user/delete" disabled>
                        <i class="fa fa-trash" aria-hidden="true"> Delete </i>
                    </button>
                    <button type="submit" class="btn btn-primary" formaction="/admin/user/update">
                        Update
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>